<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.team.android_baozou.drawer.view.RankFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rank_toolbat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FB3D4F"
        app:navigationIcon="@mipmap/btn_home_menu_nor"
        app:title="排行榜"
        app:titleTextColor="#fff" />

    <android.support.design.widget.TabLayout
        android:id="@+id/rank_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/rank_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
