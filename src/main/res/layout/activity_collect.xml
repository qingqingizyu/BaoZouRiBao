<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.team.android_baozou.drawer.view.CollectActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/Collect_toolbat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E62715"
        app:navigationIcon="@mipmap/btn_actionbar_back"
        app:title="收藏"
        app:titleTextColor="#fff" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioButton
                android:onClick="CollectButton"
                android:button="@null"
                android:drawableLeft="@mipmap/icon_delete"
                android:text="清除全部"
                android:textSize="16dp"
                android:textColor="#fff"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    <ListView
        android:id="@+id/collect_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
